<div style="float: left;margin-right:100px">
  <table>
    <thead>
      <tr>
        <th colspan="6"><%= @game.players[1].name %>'s Hand:</th>
      </tr>
    </thead>
  </table>

<p>
  <span>
    <strong>Current Score:</strong>
    <%= display_score(@game.players) %>
  </span>
</p>
<br>

